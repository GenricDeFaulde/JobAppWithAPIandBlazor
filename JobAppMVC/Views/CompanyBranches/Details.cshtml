@model JobApp.Models.CompanyModel.CompanyBranch

@{
    ViewData["Title"] = "Details";
}
@* TODO make more in line with other detail pages *@
<h1>@Model.Company.CompanyName</h1>

<div>
    <h4>Zweigstelle / Abteilung</h4>
    <hr />
    <form asp-action="Edit" asp-route-id="@Model.Id">
        <dl class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CompanyId" />
            <dt class="col-sm">
                <label asp-for="Name" class="control-label">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Name" class="form-control-plaintext input-bg"
                    placeholder="@Html.DisplayFor(model => model.Name)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </dd>
            <dt class="col-sm">
                <label asp-for="Description" class="control-label mb-0 sm-0">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Description" class="form-control-plaintext"
                    placeholder="@Html.DisplayFor(model => model.Description)" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </dd>
            <dt class="col-sm">
                <label asp-for="AddressNation" class="control-label mb-0 sm-0">
                    @Html.DisplayNameFor(model => model.AddressNation)
                </label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="AddressNation" class="form-control-plaintext"
                    placeholder="@Html.DisplayFor(model => model.AddressNation)" />
                <span asp-validation-for="AddressNation" class="text-danger"></span>
            </dd>
            <dt class="col-sm">
                <label asp-for="AddressState" class="control-label mb-0 sm-0">
                    @Html.DisplayNameFor(model => model.AddressState)
                </label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="AddressState" class="form-control-plaintext"
                    placeholder="@Html.DisplayFor(model => model.AddressState)" />
                <span asp-validation-for="AddressState" class="text-danger"></span>
            </dd>
            <dt class="col-sm">
                <label asp-for="AddressCity" class="control-label mb-0 sm-0">
                    @Html.DisplayNameFor(model => model.AddressCity)
                </label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="AddressCity" class="form-control-plaintext"
                    placeholder="@Html.DisplayFor(model => model.AddressCity)" />
                <span asp-validation-for="AddressCity" class="text-danger"></span>
            </dd>
            <dt class="col-sm">
                <label asp-for="AddressStreet" class="control-label mb-0 sm-0">
                    @Html.DisplayNameFor(model => model.AddressStreet)
                </label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="AddressStreet" class="form-control-plaintext"
                    placeholder="@Html.DisplayFor(model => model.AddressStreet)" />
                <span asp-validation-for="AddressStreet" class="text-danger"></span>
            </dd>
        </dl>

        <div class="form-group col-3 align-self-center ml-auto mr-auto">
            <input type="submit" value="|Save|" class="btn btn-muted p-0" />
            &nbsp;<-> &nbsp;&nbsp;<a class="btn btn-muted ml-auto p-0" asp-action="Index"
                    asp-route-id="@Model.CompanyId">|Back to List|
                </a>
        </div>
    </form>
</div>
