@model IEnumerable<JobApp.Models.JobModel.Job>

@{
    ViewData["Title"] = "Index";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 mb-0">
            <h1 class="mb-0">Jobs</h1>
            <p class="mb-0">Informationen zu bestimmten Berufen</p>
        </div>
        <div class="col-lg-6 mt-auto ">
            <p class="mt-auto mb-0 text-right">
                <a class="text-dark mt-auto" asp-action="Create">Create New</a>
            </p>
        </div>
    </div>
    <table class="table table-striped table-hover table-sm table-dark" cellspacing="25">
        <thead class="table-bordered ">
            <tr>
                <th>
                    Berufsbezeichnung
                </th>
                <th>
                    Alternative Bezeichnung
                </th>
                <th>
                    Alternative Bezeichnung 2
                </th>
                <th>
                    Offene Stellen
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="text-muted font-weight-bold" asp-action="Edit" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TitleAlt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TitleAlt2)
                    </td>
                    <td>
                        <a class="text-muted font-weight-bold" asp-controller="JobOffers" asp-action="JobIndex"
                            asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Offers.Count)
                        </a>
                    </td>
                    <td width="7%" class="text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-muted fa fa-edit"></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted fa fa-trash"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
