@model JobApp.Models.CompanyModel.Company

@{
    ViewData["Title"] = "Details";
}


@* TODO center this bitch!*@


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 mt-auto d-flex">
            <p class="mt-auto ">
                <a class="text-dark mt-auto p-absolute l-0 t-25%" asp-action="Index">
                    <-- Back</a>
            </p>
            <h1 class="d-block ml-auto mr-auto">@Html.DisplayFor(model => model.CompanyName)</h1>
            <p class="mt-auto ">
                <a class="text-dark mt-auto p-absolute r-0 t-25%" asp-action="Edit" asp-route-id="@Model.Id">
                    --> Edit</a>
            </p>
        </div>
        <div class="col-lg-12">
        </div>
    </div>
    <table class="table table-striped table-hover table-sm table-dark" cellspacing="25">
        <thead>
            <tr class="font-weight-bold">
                <th colspan="6" class="text-center">
                    Abteilungen und Zweigstellen
                </th>
            </tr>
        </thead>
        <thead class="table-bordered ">
            <tr>
                <th>
                    Art
                </th>
                <th>
                    Beschreibung
                </th>
                <th>
                    Land
                </th>
                <th>
                    Staat
                </th>
                <th>
                    Anschrift
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Branches.Count() == 0)
            {
                <p>No Information yet</p>
            }
            @foreach (var item in Model.Branches.OrderByDescending(a => a.AddressNation))
            {

                <tr>
                    <td width="14%">
                        <a class="text-muted font-weight-bold" asp-controller="CompanyBranches" asp-action="Details"
                            asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td width="30%">
                        <div class="overflow-hidden">
                            @Html.DisplayFor(modelitem => item.Description)
                        </div>
                    </td>
                    <td width="8%">
                        @Html.DisplayFor(modelItem => item.AddressNation)
                    </td>
                    <td width="8%">
                        @Html.DisplayFor(modelItem => item.AddressState)
                    </td>
                    <td width="33%">
                        @Html.DisplayFor(modelItem => item.AddressStreet) 
                        &nbsp; - 
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.AddressCity)
                    </td>
                    <td class="text-right" width="7%">
                        <a class="text-light fa fa-info" asp-controller="CompanyBranches" asp-action="Details"
                            asp-route-id="@item.Id"></a> |
                        <a class="text-light fa fa-edit" asp-controller="CompanyBranches" asp-action="Delete"
                            asp-route-id="@item.Id"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">

        <a asp-controller="CompanyBranches" asp-action="Create" asp-route-id="@Model.Id" class="text-dark">
            (Neu)
        </a>
    </div>
</div>





