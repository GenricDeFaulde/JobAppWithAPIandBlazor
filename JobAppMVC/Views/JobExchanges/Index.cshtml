@model IEnumerable<JobApp.Models.JobModel.JobExchange>

@{
    ViewData["Title"] = "Index";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 mb-0">
            <h1 class="mb-0">Jobportale</h1>
            <p class="mb-0">Übersicht</p>
        </div>
        <div class="col-lg-6 mt-auto ">
            <p class="mt-auto mb-0 text-right">
                <a class="text-dark mt-auto font-weight-bold" asp-action="Create">Create New</a>
            </p>
        </div>
    </div>
    <table class="table table-striped table-hover table-sm table-dark" cellspacing="25">
        <thead class="table-bordered ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Current)
                </th>
                <th>
                    Angebote
                </th>
                <th width="7%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-muted font-weight-bold">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td width="5%" class="text-center">
                        @Html.DisplayFor(modelItem => item.Current)
                    </td>
                    <td width="5%" class="text-center">
                        <a class="text-muted font-weight-bold" asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Offers.Count)
                        </a>
                    </td>
                    <td width="7%" class="text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-muted fa fa-edit"></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted fa fa-trash"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
