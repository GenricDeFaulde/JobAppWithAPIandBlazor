@using Microsoft.AspNetCore.Identity
@using JobApp.Areas.Identity.Data
@inject SignInManager<JobAppUser> SignInManager
@inject UserManager<JobAppUser> UserManager
@{
    ViewBag.MasterName = (User.Identity.Name == "genric.defaulde@gmail.com") ? "Master" : User.Identity.Name;
    if (User.Identity.Name == "kempski@alv.de") { ViewBag.MasterName = "Frau Kempski"; }

}

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
